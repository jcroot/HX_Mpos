<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:id="@+id/select_bank"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

        <LinearLayout
            android:id="@+id/layout_bank_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/default_margin"
            android:background="@drawable/white_background_reg"
            android:padding="@dimen/default_padding"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bankIdTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="银行名称"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/bankReLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_input_reg"
                    android:gravity="center" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_bank"
                            style="@style/textView_check_new_style"
                            android:gravity="center"
                            android:hint="请点击选择 （银行名称)" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_skb" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="银行卡"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_cradNo"
                    style="@style/textView_check_style"
                    android:background="@drawable/selector_input_reg"
                    android:digits="0123456789"
                    android:editable="false"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:maxLength="19"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="有效期"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_period"
                    style="@style/textView_check_style"
                    android:background="@drawable/selector_input_reg"
                    android:editable="false"
                    android:hint="有效期限"
                    android:inputType="number"
                    android:maxLength="19"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CVV"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_cvv"
                    style="@style/textView_check_style"
                    android:background="@drawable/selector_input_reg"
                    android:editable="false"
                    android:inputType="number"
                    android:maxLength="19"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_next"
            style="@style/style_btn"
            android:layout_marginTop="@dimen/default_height"
            android:text="@string/next"
            android:layout_margin="@dimen/default_margin"
            />
        </LinearLayout>


</LinearLayout>