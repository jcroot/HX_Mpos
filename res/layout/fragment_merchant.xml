<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.td.app.pay.hx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <com.lk.td.pay.wedget.refresh.PullRefreshLayout
        android:id="@+id/refresh_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:type="water_drop">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/merchant_account_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_input_amount"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10.0dp"
                    android:weightSum="6">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/avatar_male"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/tv_uname"
                            style="@style/mStyle.reg_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="陆克俊" />

                        <TextView
                            android:id="@+id/tv_uaccount"
                            style="@style/mStyle.reg_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            style="@style/mStyle.reg_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="可用余额" />

                        <TextView
                            android:id="@+id/tv_uaccount_balance"
                            style="@style/mStyle.reg_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="6dp"
                            android:drawableLeft="@drawable/rmb32"
                            android:drawablePadding="5dp"
                            android:text="--" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/avatar_arrow"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10.0dp"
                    android:paddingRight="10.0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background_reg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/merchant_auth_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pic_left_auth" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="48.0dip"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="提款到银行账户"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/medium" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/white_background_reg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/trade_completed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pic_left_help" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="48.0dip"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="已完成交易记录"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/medium" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="@color/lightgray" />

                        <LinearLayout
                            android:id="@+id/trade_uncompleted"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pic_left_help_un" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="48.0dip"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="未完成交易记录"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />


                    <!-- <TextView
                        android:id="@+id/merchant_profit_query"
                        android:layout_width="match_parent"
                        android:layout_height="48.0dip"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:drawableLeft="@drawable/pic_left_help"
                        android:drawablePadding="8.0dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="分润查询"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" /> -->


                    <TextView
                        android:id="@+id/merchant_notify_text"
                        android:layout_width="match_parent"
                        android:layout_height="48.0dip"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:drawableLeft="@drawable/pic_left_notify"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="设备签到"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/medium"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/white_background_reg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/merchant_pwd_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pic_left_password" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="48.0dip"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="密码管理"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/medium" />
                        </LinearLayout>


                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="@color/lightgray" />

                        <LinearLayout
                            android:id="@+id/merchant_equ_layout"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dp"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pic_left_equip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="设备列表"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/medium" />

                            <TextView
                                android:id="@+id/merchant_equ_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:paddingRight="12dp"
                                android:text=""
                                android:textColor="@color/regBlue"
                                android:textSize="@dimen/small" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/white_background_reg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/merchant_contact_layout"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dp"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pic_left_auth_name" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="实名认证"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/medium" />

                            <TextView
                                android:id="@+id/merchant_contact_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:paddingRight="12dp"
                                android:text=""
                                android:textColor="@color/regBlue"
                                android:textSize="@dimen/small" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="@color/lightgray" />

                        <LinearLayout
                            android:id="@+id/merchant_bankcard_layout"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dp"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pic_left_auth_card" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="绑定银行卡"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/medium" />


                            <TextView
                                android:id="@+id/merchant_bankcardnum_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:paddingRight="12dp"
                                android:text=""
                                android:textColor="@color/regBlue"
                                android:textSize="@dimen/small" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.lk.td.pay.wedget.refresh.PullRefreshLayout>

</LinearLayout>