<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >
    <RelativeLayout android:background="@drawable/title_bar_reg" android:layout_width="fill_parent" android:layout_height="@dimen/reg_title_height">
        <Button android:textSize="@dimen/medium" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/btn_back" android:background="@drawable/selector_reg_back" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/cashin" />
        
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:padding="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background_reg"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_show_msg_code"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/iv_success"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_show_msg_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textColor="@color/LKblue"
                android:textSize="20sp" 
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_show_msg_confirm"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_next_normal"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>