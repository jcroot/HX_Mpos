<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <com.lk.td.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_realname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="15dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_background_reg"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="5dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="1dip" >

                        <ImageView
                            android:id="@+id/btn_bca_front"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/btn_add_id_card" />

                        <TextView
                            style="@style/btn_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent_back"
                            android:text="银行卡正面"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="1dip" >

                        <ImageView
                            android:id="@+id/btn_bca_back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/btn_add_id_card" />

                        <TextView
                            style="@style/btn_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent_back"
                            android:gravity="center"
                            android:text="银行卡反面"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dip"
                android:background="@drawable/white_background_reg"
                android:orientation="vertical"
                android:padding="5dip" >

                <LinearLayout
                    android:id="@+id/ll_oldcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="原银行卡"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_oldcradNo"
                        style="@style/textView_check_style"
                        android:background="@drawable/selector_input_reg"
                        android:digits="0123456789"
                        android:editable="false"
                        android:hint=""
                        android:inputType="number"
                        android:maxLength="19"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="银行卡"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_cradNo"
                        style="@style/textView_check_style"
                        android:background="@drawable/selector_input_reg"
                        android:digits="0123456789"
                        android:editable="false"
                        android:hint="请输入银行卡号"
                        android:inputType="number"
                        android:maxLength="19"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="身份证号"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_id"
                        style="@style/textView_check_style"
                        android:background="@drawable/selector_input_reg"
                        android:digits="0123456789"
                        android:editable="false"
                        android:hint="请输入身份证号"
                        android:inputType="number"
                        android:maxLength="19"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cityIdTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="开户城市"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:id="@+id/recruitmentReLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_input_reg"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txt_province"
                                style="@style/textView_check_new_style"
                                android:gravity="center"
                                android:hint="请点击选择 （省 市/区)" />

                            <TextView
                                android:id="@+id/txt_city"
                                style="@style/textView_check_new_style"
                                android:gravity="center"
                                android:hint="" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right_arrow_skb" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/bankIdTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="银行名称"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:id="@+id/bankReLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_input_reg"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txt_bank"
                                style="@style/textView_check_new_style"
                                android:gravity="center"
                                android:hint="请点击选择 （银行名称)" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right_arrow_skb" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/branchIdTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="支行名称"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:id="@+id/branchReLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_input_reg"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txt_branch"
                                style="@style/textView_check_new_style"
                                android:gravity="center"
                                android:hint="请点击选择 （支行名称)" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right_arrow_skb" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_bca_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_next_normal"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="18dp"
                />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:text="分行输入提示："-->
                <!--android:textColor="#616161" />-->

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="\t为确保安全到账，请与发卡银行核实您的开户分行信息。"-->
                <!--android:textColor="#616161" />-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>