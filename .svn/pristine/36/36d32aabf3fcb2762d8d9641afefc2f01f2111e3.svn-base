<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/account_white_layout_bg"
        android:orientation="vertical"
        android:paddingLeft="10.0dp"
        android:paddingRight="10.0dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/more_share_text"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:background="@drawable/selector_tab_activitygroup"
            android:drawableLeft="@drawable/pic_left_password"
            android:drawablePadding="8.0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="分享"
            android:textColor="@color/textblack"
            android:textSize="@dimen/medium" />

        <!-- <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/lightgray" /> -->

        <TextView
            android:visibility="gone"
            android:id="@+id/more_feedback_text"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:background="@drawable/selector_tab_activitygroup"
            android:drawableLeft="@drawable/pic_left_password"
            android:drawablePadding="8.0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="意见反馈"
            android:textColor="@color/textblack"
            android:textSize="@dimen/medium" />

        

        <TextView
            android:visibility="gone"
            android:id="@+id/more_help_text"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:background="@drawable/selector_tab_activitygroup"
            android:drawableLeft="@drawable/pic_left_help"
            android:drawablePadding="8.0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="使用帮助"
            android:textColor="@color/textblack"
            android:textSize="@dimen/medium" />

        <!-- <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/lightgray" /> -->

        <LinearLayout
            android:id="@+id/merchant_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="48.0dp"
            android:background="@drawable/selector_tab_activitygroup"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/pic_left_contact"
                android:drawablePadding="8.0dp"
                android:gravity="center_vertical"
                android:text="联系客服"
                android:textColor="@color/textblack"
                android:textSize="@dimen/medium" />

            <TextView
                android:id="@+id/more_contact_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="12dp"
                android:text="021-6590-9780"
                android:textColor="@color/regBlue"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/lightgray" />

        <LinearLayout
            android:id="@+id/more_version_layout"
            android:layout_width="match_parent"
            android:layout_height="48.0dp"
            android:background="@drawable/selector_tab_activitygroup"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/pic_left_version"
                android:drawablePadding="8.0dp"
                android:gravity="center_vertical"
                android:text="版本更新"
                android:textColor="@color/textblack"
                android:textSize="@dimen/medium" />

            <TextView
                android:id="@+id/more_version_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="12dp"
                android:text="@string/versionNo"
                android:textColor="@color/regBlue"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/more_about_text"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:background="@drawable/selector_tab_activitygroup"
            android:drawableLeft="@drawable/pic_left_merchant"
            android:drawablePadding="8.0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="关于我们"
            android:textColor="@color/textblack"
            android:textSize="@dimen/medium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/lightgray" />

        <Button
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/selector_next_normal"
            android:text="安全退出"
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>