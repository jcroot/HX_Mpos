<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/t1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/reg_title_height"
        android:background="@drawable/title_bar_reg" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_reg_back"
            android:gravity="center_vertical"
            android:text="@string/about_us"
            android:textColor="@color/white"
            android:textSize="@dimen/medium" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件信息"
                android:textColor="@color/regBlue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="汇鑫宝手机客户端（Android）"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/about_protocol_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="汇鑫宝用户服务协议"
                android:textColor="@color/regBlue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/about_service_agreement_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="汇鑫宝客户端服务协议"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="公司地址"
                android:textColor="@color/regBlue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="西安高新区西高智能大厦12F"
                android:textColor="@color/gray"
                android:textSize="16sp" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="客服热线"
                android:textColor="@color/regBlue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="021-6590-9780"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/app_company"
        android:textColor="@color/gray"
        android:textSize="14sp" />

</RelativeLayout>